<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">

    <arg name="basepath" value="."/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="80"/>

    <!-- NetAnts: Warnings are still shown, but do not return a non-zero exit code -->
    <config name="ignore_warnings_on_exit" value="1"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>

    <exclude-pattern>tests/_bootstrap.php</exclude-pattern>
    <exclude-pattern>tests/_craft/storage</exclude-pattern>

    <rule ref="PSR12">

    </rule>


    <!-- NetAnts: Exclude some files from line length warning rule -->
    <rule ref="Generic.Files.LineLength">
        <!-- Using only 120 characters is so antiquated. -->
        <properties>
            <property name="lineLimit" value="140"/>
        </properties>
    </rule>

    <!-- Netants: Uncaught Exceptions should be documented -->
    <rule ref="Squiz.Commenting.FunctionCommentThrowTag">
        <type>warning</type>
    </rule>
</ruleset>
